---
layout: null
permalink: /search.json
sitemap: false
---
[
  {% for item in site.pages %}
    {% if item.title %}
    {
      "title"    : "{{ item.title | escape }}",
      "description" : "{{ item.description | strip_html | strip_newlines }}",
      "categories"     : "{{ item.categories | join: ', ' }}",
      "tags"     : "{{ item.tags | join: ', ' }}",
      "url"      : "{{ item.external_url | default: item.url | relative_url }}"
    },
    {% endif %}
  {% endfor %}

  {% for item in site.posts %}
    {% if item.title %}
    {
      "title"    : "{{ item.title | escape }}",
      "description" : "{{ item.description | strip_html | strip_newlines }}",
      "categories"     : "{{ item.categories | join: ', ' }}",
      "url"      : "{{ item.external_url | default: item.url | relative_url }}"
    },
    {% endif %}
  {% endfor %}
  
  {% for item in site.projects %}
  {% if item.title %}
    {
      "title"    : "{{ item.title | escape }}",
      "description" : "{{ item.description | strip_html | strip_newlines }}",
      "categories"     : "{{ item.categories | join: ', ' }}",
      "url"      : "{{ item.external_url | default: item.url | relative_url }}"
    } {% unless forloop.last %},{% endunless %}
  {% endif %}
  {% endfor %}
]